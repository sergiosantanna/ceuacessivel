<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gabriel.aplicativoacessibilidade.PlanetasSistemaSolar"
    android:background="@android:color/black">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button18"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_margin="15dp"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:text="Voltar"
                android:textSize="18dp"
                android:background="@drawable/formavoltar"
                android:onClick="telaAnterior"
                android:textColor="#1F0BA1"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="200dp"
                android:layout_height="258dp"
                android:layout_column="0"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_row="2"
                android:layout_weight="0.04"
                android:fontFamily="sans-serif"
                android:text="Mercúrio: Primeiro Planeta do Sistema Solar, este astro rochoso recebeu seu nome em homenagem ao mensageiro dos deuses da mitologia romana, devido ao movimento rápido do planeta no céu em relação aos demais."
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:contentDescription="Mercúrio possui tonalidade bege. Em sua superfície pequenas crateras e fendas espalham-se por todo astro. Na parte superior à direita em sentido vertical, uma pequena mancha na cor branca."
                android:paddingLeft="-20dp"
                app:srcCompat="@drawable/mercurioplaneta" />
            <TextView
                android:layout_row="3"
                android:text="Saiba mais sobre Mercúrio"
                android:textSize="15sp"
                android:layout_column="0"
                android:textColor="#ffff00"
                android:background="#0000ff"
                android:layout_marginLeft="8dp"
                android:onClick="glossario1"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_column="0"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_row="4"
                android:layout_weight="0.04"
                android:fontFamily="sans-serif"
                android:text="Vênus: Segundo Planeta do Sistema Solar, este astro rochoso recebeu seu nome em homenagem à deusa romana do amor e da beleza. Depois da Lua é o objeto mais brilhante do céu noturno."
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:paddingLeft="-20dp"
                app:srcCompat="@drawable/venusplaneta2"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="Fotografia da atmosfera do Planeta Vênus com fundo preto. Ao centro, a atmosfera tem linhas grossas e finas nas cores bege, marrom e branco, que estendem-se por todo astro da esquerda para direita.
 Fotografia da superfície do Planeta Vênus, possui tons de bege e marrom. Ao longo desta, crateras e manchas escuras (montanhas) distribuem-se da esquerda para direita em toda superfície do astro. Ao centro, pequenas fendas verticais estendem-se de cima para baixo, formando diversas ramificações.
"/>


            <TextView
                android:text="Saiba mais sobre Vênus"
                android:textSize="15sp"
                android:layout_column="0"
                android:textColor="#ffff00"
                android:background="#0000ff"
                android:layout_marginLeft="8dp"
                android:layout_row="5"
                android:onClick="glossario2"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="200dp"
                android:layout_height="260dp"
                android:layout_column="0"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_row="6"
                android:layout_weight="0.04"
                android:fontFamily="sans-serif"
                android:text="Marte: Quarto Planeta do Sistema Solar, este astro possui superfície rochosa e cor avermelhada. O planeta recebeu esse nome em homenagem ao Deus romano da Guerra. Marte possui dois satélites naturais: Fobos (temor) e Deimos (terror).
"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="190dp"
                android:layout_height="130dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="70dp"
                android:contentDescription="Marte possui tons de laranja, marrom e vermelho. Na parte superior, a esquerda duas crateras em tons de marrom. Ao centro uma pequena fenda em relação à superfície do planeta em sentido vertical, sobreposta, por uma grande fenda que estende-se da esquerda à direita do astro.
Na parte inferior, uma mancha laranja-escuro estende-se da esquerda para direita, formando uma área com pouca luz.
A direita, pequenas crateras distribuem-se de forma espaçada na superfície do astro.
"
                android:paddingLeft="-50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:srcCompat="@drawable/planetamarte"

                />

            <TextView
                android:layout_column="0"
                android:layout_marginLeft="8dp"
                android:layout_row="7"
                android:background="#0000ff"
                android:onClick="glossario3"
                android:text="Saiba mais sobre Marte"
                android:textColor="#ffff00"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="200dp"
                android:layout_height="330dp"
                android:layout_column="0"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_row="8"
                android:layout_weight="0.04"
                android:fontFamily="sans-serif"
                android:text="Júpiter: Quinto e maior Planeta do Sistema Solar, esse gigante gasoso recebeu este nome em homenagem ao Deus do dia, dos céus, dos raios e líder de todos os outros Deuses do Olimpo. Júpiter possui mais de 60 satélites naturais, os quais destacam-se as Luas de Galileu ou Luas Galileanas: Europa, Ganimedes, Io e Calisto."
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="70dp"
                android:layout_weight="0.58"
                android:contentDescription="A atmosfera deste planeta gasoso contém diversas linhas horizontais  que estendem-se da esquerda para direita ao longo de todo astro.  Na parte superior,  linhas mescladas em tons de cinza, laranja, marrom, vermelho e lilás. Na parte inferior, à esquerda uma grande mancha  em formato circular (furacão) de cor laranja e linhas com tons, lilás, marrom e azul-claro. A direita, na parte inferior, duas  pequenas manchas em tons de cinza e laranja."
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                app:srcCompat="@drawable/planetajupiter"
                android:paddingLeft="-30dp"/>

            <TextView
                android:text="Saiba mais sobre Júpiter"
                android:textSize="15sp"
                android:layout_column="0"
                android:textColor="#ffff00"
                android:background="#0000ff"
                android:layout_marginLeft="8dp"
                android:layout_row="10"
                android:onClick="glossario4"/>


            <TextView
                android:id="@+id/textView5"
                android:layout_width="200dp"
                android:layout_height="210dp"
                android:layout_column="0"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_row="11"
                android:layout_weight="0.04"
                android:fontFamily="sans-serif"
                android:text="Saturno: Sexto Planeta do Sistema Solar, este gigante gasoso é formado pelos anéis que o circulam. O astro recebeu este nome em homenagem ao Deus romano do tempo."
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <ImageView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/planetasaturno"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:contentDescription="Saturno possui cor amarelo claro com linhas finas ao longo de toda superfície. Ao seu redor, diversos anéis (composto de gás e poeira) circulam todo o astro."
                android:paddingLeft="-30dp"/>

            <TextView
                android:text="Saiba mais sobre Saturno"
                android:textSize="15sp"
                android:layout_column="0"
                android:textColor="#ffff00"
                android:background="#0000ff"
                android:layout_marginLeft="8dp"
                android:layout_row="12"
                android:onClick="glossario5"/>


        </GridLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>
